<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:~/treeDB</property>
        <property name="connection.username">userTree</property>
        <property name="connection.password">pass</property>

        <property name="show_sql">true</property>

        <!-- drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create</property>

        <mapping class="com.example.common.Area"/>
        <mapping class="com.example.common.BusinessTripReadiness"/>
        <mapping class="com.example.common.Certificate"/>
        <mapping class="com.example.common.Contact"/>
        <mapping class="com.example.common.ContactType"/>
        <mapping class="com.example.common.Country"/>
        <mapping class="com.example.common.Currency"/>
        <mapping class="com.example.common.District"/>
        <mapping class="com.example.common.DriverLicenseType"/>
        <mapping class="com.example.common.Education"/>
        <mapping class="com.example.common.EducationLevel"/>
        <mapping class="com.example.common.Employer"/>
        <mapping class="com.example.common.Employment"/>
        <mapping class="com.example.common.Experience"/>
        <mapping class="com.example.common.Gender"/>
        <mapping class="com.example.common.HiddenField"/>
        <mapping class="com.example.common.Industry"/>
        <mapping class="com.example.common.Language"/>
        <mapping class="com.example.common.LanguageLevel"/>
        <mapping class="com.example.common.Line"/>
        <mapping class="com.example.common.Metro"/>
        <mapping class="com.example.common.Owner"/>
        <mapping class="com.example.common.Photo"/>
        <mapping class="com.example.common.Platform"/>
        <mapping class="com.example.common.Portfolio"/>
        <mapping class="com.example.common.ProfessionalRole"/>
        <mapping class="com.example.common.Relocation"/>
        <mapping class="com.example.common.RelocationType"/>
        <mapping class="com.example.common.Resume"/>
        <mapping class="com.example.common.ResumeLocale"/>
        <mapping class="com.example.common.Schedule"/>
        <mapping class="com.example.common.Site"/>
        <mapping class="com.example.common.SiteType"/>
        <mapping class="com.example.common.Specialization"/>
        <mapping class="com.example.common.TravelTime"/>
    </session-factory>

</hibernate-configuration>
